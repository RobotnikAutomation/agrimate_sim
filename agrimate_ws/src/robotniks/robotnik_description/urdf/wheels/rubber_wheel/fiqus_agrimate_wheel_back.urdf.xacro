<?xml version="1.0" ?>
<robot
  name="wheel"
  xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:include
    filename="$(find robotnik_description)/urdf/wheels/rubber_wheel/gazebo/rubber_wheel.transmission.xacro" />
  <xacro:include
    filename="$(find robotnik_description)/urdf/wheels/rubber_wheel/gazebo/rubber_wheel.gazebo.xacro" />

  <!-- Wheels -->
  <xacro:property
    name="rubber_big_wheel_radius"
    value="0.30" />
  <xacro:property
    name="wheel_height"
    value="0.15" />
  <xacro:property
    name="wheel_mass"
    value="6.5" />

  <xacro:macro
    name="cylinder_inertia"
    params="m r h">
    <inertia
      ixx="${m*(3*r*r+h*h)/12}"
      ixy="0"
      ixz="0"
      iyy="${m*r*r/2}"
      iyz="0"
      izz="${m*(3*r*r+h*h)/12}" />
  </xacro:macro>

  <xacro:macro
    name="fiqus_agrimate_wheel_back"
    params="prefix parent *origin reflect hq rubber_big_wheel_radius:=0.30 rubber_wheel_width:=0.15 rubber_wheel_mass:=6.5">
    <!--WHEEL TIRE -->
    <joint
      name="${prefix}wheel_joint"
      type="continuous">
      <parent link="${parent}" />
      <child link="${prefix}wheel" />
      <xacro:insert_block name="origin" />
      <axis xyz="0 1 0" />
      <limit
        effort="1000"
        velocity="100" />
      <joint_properties
        damping="0.5"
        friction="2.0" />
    </joint>

    <link name="${prefix}wheel">
      <visual>
        <!-- HIGH RESOLUTION WHEELS -->
        <xacro:if value="${hq}">
          <xacro:unless value="${reflect}">
            <origin
              xyz="0 0 0"
              rpy="0 1.5708 ${pi/2}" />
          </xacro:unless>
          <xacro:if value="${reflect}">
            <origin
              xyz="0 0 0"
              rpy="0 1.5708 ${pi/2}" />
          </xacro:if>
          <geometry>
            <mesh
              filename="package://robotnik_description/meshes/bases/rbfiqus/agrimate/Rueda_Grande_Agrimate.STL" />
          </geometry>
        </xacro:if>
        <!-- LOW RESOLUTION WHEELS -->
        <xacro:unless value="${hq}">
          <origin
            xyz="0 0 0"
            rpy="${pi/2} 0 0" />
          <geometry>
            <cylinder
              length="${rubber_wheel_width}"
              radius="${rubber_big_wheel_radius}" />
          </geometry>
        </xacro:unless>
        <material name="black">
          <color rgba="0.1 0.1 0.1 1" />
        </material>
      </visual>

      <collision>
        <origin
          xyz="0 0 0"
          rpy="${pi/2} 0 0" />
        <geometry>
          <cylinder
            length="${rubber_wheel_width}"
            radius="${rubber_big_wheel_radius}" />
        </geometry>
      </collision>
      <inertial>
        <mass value="${rubber_wheel_mass}" />
        <origin xyz="0 0 0" />
        <xacro:cylinder_inertia
          m="${rubber_wheel_mass}"
          r="${rubber_big_wheel_radius}"
          h="${rubber_wheel_width}" />
      </inertial>
    </link>

    <gazebo reference="${prefix}wheel">
      <!-- <material>Gazebo/Black</material> -->
      <mu1>0.9</mu1>
      <mu2>0.5</mu2>
      <kp>2.75e9</kp>
      <kd>8.25e1</kd>
      <fdir1>1 0 0</fdir1>
    </gazebo>
  </xacro:macro>
</robot>
